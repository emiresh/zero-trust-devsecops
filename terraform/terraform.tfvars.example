# Example terraform.tfvars - Copy this file and customize for your environment
# cp terraform.tfvars.example terraform.tfvars

# ==========================================
# OCI Authentication (REQUIRED)
# ==========================================

# Your OCI tenancy OCID
# Find in: Console → Profile → Tenancy
tenancy_ocid = "ocid1.tenancy.oc1..aaaaaaaa..."

# Your OCI user OCID
# Find in: Console → Profile → User Settings
user_ocid = "ocid1.user.oc1..aaaaaaaa..."

# Your API key fingerprint
# Find in: Console → Profile → User Settings → API Keys
fingerprint = "12:34:56:78:90:ab:cd:ef:12:34:56:78:90:ab:cd:ef"

# Path to your private API key
private_key_path = "~/.oci/oci_api_key.pem"

# OCI Region
# Common regions: ap-mumbai-1, us-ashburn-1, eu-frankfurt-1
region = "ap-mumbai-1"

# ==========================================
# Compartment (REQUIRED)
# ==========================================

# Compartment OCID where resources will be created
# Find in: Console → Identity → Compartments
compartment_id = "ocid1.compartment.oc1..aaaaaaaa..."

# ==========================================
# SSH Access (REQUIRED)
# ==========================================

# Your SSH public key for instance access
# Get with: cat ~/.ssh/id_rsa.pub
ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABAQC..."

# ==========================================
# Network Configuration
# ==========================================

vcn_cidr_block    = "10.0.0.0/16"
subnet_cidr_block = "10.0.1.0/24"

# CIDRs allowed to SSH (10.0.0.0/8 = private network, or use your specific IP)
allowed_ssh_cidrs = ["10.0.0.0/8"]  # Or replace with ["YOUR.IP.ADDRESS.HERE/32"]

# CIDRs allowed to access Kubernetes API
allowed_k8s_api_cidrs = ["0.0.0.0/0"]

# ==========================================
# Compute Instance Configuration
# ==========================================

instance_name = "freshbonds-k8s-node-1"

# Instance shape (ARM-based free tier)
instance_shape = "VM.Standard.A1.Flex"

# Free tier: up to 4 OCPUs total across all instances
instance_ocpus = 4

# Free tier: up to 24 GB total across all instances
instance_memory_gb = 24

# Free tier: up to 200 GB total boot volume storage
boot_volume_size_gb = 200

# ==========================================
# Operating System
# ==========================================

os_image_name = "Canonical Ubuntu"
os_version    = "22.04"

# ==========================================
# Cloud-Init Configuration
# ==========================================

# Install K3s Kubernetes distribution
install_k3s = true

# Install monitoring agents (node-exporter)
install_monitoring = true

# Install Docker
install_docker = true

# ==========================================
# Storage Configuration
# ==========================================

# Create additional data volume
create_data_volume = false

# Data volume size (if created)
data_volume_size_gb = 50

# ==========================================
# Resource Tags
# ==========================================

freeform_tags = {
  "Environment" = "production"
  "Project"     = "FreshBonds"
  "ManagedBy"   = "Terraform"
  "Owner"       = "DevOps Team"
  "CostCenter"  = "Engineering"
}

# Defined tags (optional, requires namespace setup)
